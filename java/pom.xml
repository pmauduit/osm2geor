<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.georchestra.mapfishapp</groupId>
  <artifactId>osm2geor-java</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>jar</packaging>
  <name>osm2geOrchestra mapfishapp addon</name>
  <description>This project contains the server-side code necessary to the osm2geor mapfishapp addon</description>
  <url>http://maven.apache.org</url>
  <properties>
    <spring.version>3.1.0.RELEASE</spring.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  <dependencies>
    <!--

         Be aware that the jar will end up in mapfishapp webapp context.

         There is no need to include the (already present) dependencies in the
         JAR that will be generated by this project, or else that would cause
         some weird issues with the classloader, hence the scope=provided.

    -->
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-webmvc</artifactId>
      <version>${spring.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.json</groupId>
      <artifactId>json</artifactId>
      <version>20080701</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
      <version>2.5</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>commons-io</groupId>
      <artifactId>commons-io</artifactId>
      <version>1.4</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.11</version>
      <scope>test</scope>
    </dependency>
    <!-- not provided components -->
    <dependency>
      <groupId>org.apache.httpcomponents</groupId>
      <artifactId>httpclient</artifactId>
      <version>4.5</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.6</version>
        <configuration>
          <finalName>osm2geor-mapfishapp-addon</finalName>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <version>2.3</version>
        <executions>
          <execution>
            <id>copy-js-resources</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <overwrite>true</overwrite>
              <outputDirectory>${basedir}/src/deb/resources/etc/georchestra/mapfishapp/addons/osm2geor</outputDirectory>
              <resources>
                <!-- config.json  css  img  java  js  manifest.json  README.md -->
                <resource>
                  <directory>${basedir}/../</directory>
                  <excludes>
                    <exclude>java/</exclude>
                    <exclude>.git/</exclude>
                    <exclude>.project</exclude>
                    <exclude>.settings/</exclude>
                  </excludes>
                </resource>
              </resources>
            </configuration>
          </execution>
          <execution>
            <id>copy-deb-resources</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <overwrite>true</overwrite>
              <outputDirectory>${basedir}/target/deb</outputDirectory>
              <resources>
                <resource>
                  <directory>${basedir}/src/deb/resources</directory>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.7</version>
        <executions>
          <execution>
            <id>fix-permissions</id>
            <phase>package</phase>
            <configuration>
              <target>
                <chmod perm="ugo+x">
                  <fileset dir="${basedir}/target/deb">
                    <include name="**/bin/**"/>
                    <include name="**/sbin/**"/>
                    <include name="DEBIAN/post*"/>
                    <include name="DEBIAN/pre*"/>
                  </fileset>
                </chmod>
              </target>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-clean-plugin</artifactId>
        <version>2.6.1</version>
        <configuration>
          <filesets>
            <fileset>
              <directory>src/deb/resources/etc/georchestra/mapfishapp/addons</directory>
              <includes>
                <include>**</include>
              </includes>
              <followSymlinks>false</followSymlinks>
            </fileset>
          </filesets>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.5.5</version>
        <configuration>
          <finalName>osm2geor-mapfishapp-addon</finalName>
          <descriptorRefs>
            <descriptorRef>jar-with-dependencies</descriptorRef>
          </descriptorRefs>
        </configuration>
        <executions>
          <execution>
            <id>make-assembly</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>net.sf.debian-maven</groupId>
        <artifactId>debian-maven-plugin</artifactId>
        <version>1.0.6</version>
        <configuration>
          <packageName>georchestra-mapfishapp-osm2geor</packageName>
          <packageDescription>osm2georchestra is an addon for Mapfishapp, the viewer integrated into geOrchestra</packageDescription>
          <projectOrganization>geOrchestra</projectOrganization>
          <maintainerName>Pierre Mauduit</maintainerName>
          <maintainerEmail>pierre.mauduit@gmail.com</maintainerEmail>
          <excludeAllDependencies>true</excludeAllDependencies>
          <excludeArtifacts>
            <excludeArtifact>osm2geor-mapfishapp-addon.jar</excludeArtifact>
          </excludeArtifacts>
          <packageDependencies>
            <packageDependency>georchestra-mapfishapp</packageDependency>
          </packageDependencies>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
